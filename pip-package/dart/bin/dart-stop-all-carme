#!/usr/bin/env python3
import json
import subprocess
import os
import sys

JOBID = os.environ['SLURM_JOBID']
HOME = os.environ['HOME']

if len (sys.argv) < 2:
    print("Wrong number of arguments: <path_to_nodefile>")
    sys.exit()

def run_command(cmd):
    """Run command, return output as string."""
    output = subprocess.Popen(cmd, stdout=subprocess.PIPE, shell=True).communicate()[0]
    return output.decode("ascii")

with open(sys.argv[1]) as f:
    dic = json.load(f)

hosts = []
for v in dic:
    for y in dic[v]: 
        if y == "hosts":
            hosts += dic[v][y]

for host in hosts:
    print("Stopping DART on host "+host+"...", end = '')
    for proc in  ["gspc-rifd", "orchestrator", "agent", "drts-kernel", "gspc-logging-demultiplexer"]:

        cmd = "ssh -F "+HOME+"/.local/share/carme/job/"+JOBID+"/ssh/ssh_config "+host+" \"kill -9 \\$(ps aux | grep "+proc+" | grep -v grep | grep -v ssh | awk \'{ print \\$2 }\' | tr \'\\n\' \' \') 2>/dev/null &\""    
#        print(cmd)
        output = run_command(cmd)
        if output != "":
            print(output)
    print("done")
